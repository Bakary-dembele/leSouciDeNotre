{% extends 'base.html.twig' %}

{% block body %}

     <div class="component_newletter">
         <div class="container" id="newsLetter_container">
             <div>
                 <h2 class="text-center">NewsLetter</h2>
                 <p>Restez informé de nos dernières actualités </p>
             </div>
             <div class="d-flex justify-content-center">
                 <div>
                     {{ form_start(formNew) }}
                     {{ form_row(formNew.email) }}
                 </div>
                 <div>
                     <button type="submit" formnovalidate>S'abonner</button>
                     {{ form_end(formNew) }}
                 </div>
             </div>
             <div class="newsletter_icon">
                 <p><i class="fas fa-envelope-open-text"></i></p>
             </div>
         </div>
         {% if is_granted('ROLE_ADMIN') %}
             <div class="text-center" id="button-creerAfficher">
                 <button>
                     <a href="{{ path('mews_afficher') }} ">Afficher la liste des abonnes</a>
                 </button>
             </div>
         {% endif%}
     </div>





{% endblock %}
