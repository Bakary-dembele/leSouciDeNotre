{% extends 'base.html.twig' %}

{% block title %}Créer Evenement{% endblock %}

{% form_theme formfoot 'bootstrap_4_layout.html.twig' %}

{% block body %}

    <!--------------------EVENEMENT FOOT------------------------>
       <div id="component_creerEnvenementFoot">
        <div class="container w-50">
            <div class="col">
                <h1 class="text-center">Créer un nouveau événement foot</h1> <br>
                <strong>
                 {{ form_start(formfoot) }}
                        {{ form_row(formfoot.titre) }}
                        {{ form_row(formfoot.descriptif) }}
                        {{ form_row(formfoot.prix) }}
                        {{ form_row(formfoot.date) }}
                        {{ form_row(formfoot.heureDebut) }}
                        {{ form_row(formfoot.heureFin) }}
                        {{ form_row(formfoot.adresse) }}
                    {{ form_row(formfoot.details) }}

                    <div class="d-flex justify-content-center">
                        <button class="button_enregisterer" formnovalidate>Enregistrer</button>
                        {{ form_end(formfoot) }}
                        <button class="button_annuler" formnovalidate><a href="{{ path('evenement_liste') }}">Annuler</a>  </button>
                    </div>
                </strong>
            </div>
        </div>
    </div>





{% endblock %}
