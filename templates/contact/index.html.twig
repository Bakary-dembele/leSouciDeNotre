    <div id="contact_parenet">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="flash flash-{{ label }} text-center">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {% if not form.vars.valid %}
            <div class="alert alert-danger text-center">
                Vous n'avez pas rempli le formulaire correctement !
            </div>
        {% endif %}


        <div class="container h-100 col-md-6" id="contact">
            <strong class="strong_contact">
            <h4 class="text-center">Nous contacter</h4>
            <div class="row h-100 justify-content-center align-items-center mt-4" >
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-sm">{{ form_row(form.nom) }}</div>
                    <div class="col-sm">{{ form_row(form.prenom) }}</div>
                </div>
                <div class="row">
                    <div class="col-sm">{{ form_row(form.email) }}</div>
                </div>
                <div class="row">
                    <div class="col-sm">{{ form_row(form.message) }}</div>
                </div>
                <div class="form-group text-center" >
                    <button class=" " id="contact_button" type="submit" formnovalidate>Envoyer</button>
                </div>
