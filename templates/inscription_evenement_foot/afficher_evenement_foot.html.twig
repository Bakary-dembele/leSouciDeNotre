
{% extends 'base.html.twig' %}

{% block title %}Liste de participants {% endblock %}

{% block body %}

<!-------------------envenement---------------------------->
{% if is_granted('ROLE_ADMIN') %}
    <div id="listeEnvenementFoot">
        <div class="container">
            <div id="titre-liste-foot">
                <h1 class="text-center">La liste de participants</h1>
            </div>

            <table class="table table-striped table-light table-bordered table-hover">
                <thead>
                <tr class="primary">
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Téléphone</th>
                    <th>Email</th>
                </tr>
                </thead>
                <tbody>
                {% for inscriptions in inscription %}
                    <tr>
                        <td>{{ inscriptions.id }}</td>
                        <td>{{ inscriptions.nom }}</td>
                        <td>{{ inscriptions.prenom }}</td>
                        <td>{{ inscriptions.telephone }}</td>
                        <td>{{ inscriptions.email }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>


            <div class="text-center" id="button-retour-incrireption-evenement-foot">
                <button>
                    <a href="{{ path('main_evenement') }} ">Retour</a>
                </button>
            </div>


        </div>
    </div>
{% endif %}


{% endblock %}