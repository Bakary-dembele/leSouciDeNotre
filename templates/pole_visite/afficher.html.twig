

{% extends 'base.html.twig' %}

    {% block title %}Afficher pôle visite {% endblock %}


    {% block body %}

        <!------afficher la collecte--->
        <div class="afficher_collecte">
            <div class="container">
                <h1 class="text-center my-4">Afficher pôle visite</h1>
                <div class="row col-sm-10 offset-sm-1">
                    <div class="table-responsive">
                    <table class="table table-light table-hover ">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ pole_visite.id }}</td>
                        </tr>
                        <tr>
                            <th>Details</th>
                            <td>{{ pole_visite.details }}</td>
                        </tr>
                        <tr>
                            <th>Date/début</th>
                            <td>{{ pole_visite.dateHeure ? pole_visite.dateHeure|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Date/clôture</th>
                            <td>{{ pole_visite.dateCloture ? pole_visite.dateCloture|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Adresse</th>
                            <td>{{ pole_visite.adresse }}</td>
                        </tr>
                        <tr>
                            <th>Réferent</th>
                            <td>{{ pole_visite.referent.nom  | capitalize}} {{ pole_visite.referent.prenom  | capitalize}}</td>
                        </tr>
                        <tr>
                            <th>Nombre de place</th>
                            <td>{{ pole_visite.nombreDePlace }}</td>
                        </tr>
                        </tbody>
                    </table>
                    </div>
                </div>

                <!------liste participants--->
                <div class="liste_collecte_participant">
                    <div>
                        <h4 class="text-center">Liste des participants inscrits</h4>
                        <table class="table table-striped table-light table-bordered table-hover">
                            <th>Nom</th>
                            <th>Prénom</th>
                            {% for inscrit in pole_visite.inscriptionPoleVisites %}
                                <tr>
                                    <td><a href="{{ path('profilUsers',{'id': inscrit.user.id}) }}">
                                            {{ inscrit.user.nom | capitalize}}</a></td>
                                    <td><a href="{{ path('profilUsers',{'id': inscrit.user.id}) }}">
                                            {{ inscrit.user.prenom }}  </a></td></td>
                                </tr>
                            {% endfor %}
                        </table>
                    </div>
                    <div class="conponent_button_retour_collecte">
                        <button class="button_retour_afficherCollecte">
                            <a href="{{ path ("pole_visite_index") }}" class="">Retour</a>
                        </button>
                    </div>

                </div>

            </div>
        </div>
    {% endblock %}




